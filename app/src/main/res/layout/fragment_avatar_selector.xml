<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="com.addschedule.garnan.schedadd.AvatarSelector">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
        app:srcCompat="@drawable/character_select"
        android:id="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_height="283dp"
        android:layout_width="0dp" />

    <TextView
        android:text="Name: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/derup_buton"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/imageView"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.120000005"
        android:onClick="derup (AvatarSelector)"
        style="@android:style/Widget.Material.Light.Button.Borderless" />

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/back"
        android:id="@+id/cardView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        android:layout_marginBottom="32dp"
        android:layout_width="0dp"
        android:layout_height="0dp" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/derup"
            android:layout_gravity="center"
            android:id="@+id/profileimage" />
    </android.support.v7.widget.CardView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/up_button"
        app:layout_constraintRight_toLeftOf="@+id/derup_buton"
        app:layout_constraintTop_toTopOf="@+id/derup_buton"
        app:layout_constraintBottom_toBottomOf="@+id/derup_buton"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/upizq_button"
        app:layout_constraintRight_toLeftOf="@+id/up_button"
        app:layout_constraintBottom_toBottomOf="@+id/up_button"
        app:layout_constraintTop_toTopOf="@+id/up_button"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        style="@style/Widget.AppCompat.Button.Borderless"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downder_button"
        app:layout_constraintLeft_toRightOf="@+id/up_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/derup_buton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/down_button"
        app:layout_constraintRight_toLeftOf="@+id/downder_button"
        app:layout_constraintTop_toTopOf="@+id/downder_button"
        app:layout_constraintLeft_toRightOf="@+id/upizq_button"
        style="@style/Widget.AppCompat.Button.Borderless" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downizq_button"
        app:layout_constraintBottom_toBottomOf="@+id/down_button"
        app:layout_constraintRight_toRightOf="@+id/upizq_button"
        app:layout_constraintTop_toTopOf="@+id/down_button"
        style="@style/Widget.AppCompat.Button.Borderless" />
</android.support.constraint.ConstraintLayout>
