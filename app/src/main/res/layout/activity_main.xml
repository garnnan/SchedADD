<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.addschedule.garnan.schedadd.MainActivity">

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/mailText"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="250dp"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="275dp"
        android:hint="E-mail" />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/PasswordID"
        app:layout_constraintRight_toRightOf="@+id/mailText"
        app:layout_constraintLeft_toLeftOf="@+id/mailText"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/mailText"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.100000024"
        android:hint="Password"
        android:textColor="?attr/actionMenuTextColor" />

    <ImageView
        android:layout_height="0dp"
        app:srcCompat="@drawable/calendario"
        android:id="@+id/imageView3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toTopOf="@+id/mailText"
        app:layout_constraintVertical_bias="0.0"
        android:layout_width="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp" />


    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
        android:text="Log in"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Login"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/PasswordID"
        app:layout_constraintRight_toRightOf="@+id/PasswordID"
        app:layout_constraintLeft_toLeftOf="@+id/PasswordID"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="60dp"
        android:background="@drawable/buttons_red" />

</android.support.constraint.ConstraintLayout>
